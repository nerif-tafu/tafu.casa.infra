api:
  insecure: true  # Enable this temporarily for debugging

entryPoints:
  web:
    address: ":80"
    # Ensure host-level requests are properly handled
    # Add proper host mapping for service discovery
    hostResolver:
      cnameFlattening: true
      resolvConfig: "/etc/resolv.conf"
      resolvDepth: 5

log:
  level: "DEBUG"  # Increase logging for debugging

providers:
  docker:
    endpoint: "unix:///var/run/docker.sock"
    exposedByDefault: false
    network: bridge-network
    watch: true 