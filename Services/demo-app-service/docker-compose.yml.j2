version: '3.8'

services:
  frontend:
    build: ./frontend
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.frontend-{{ service_number }}.rule=Host(`{{ service_name }}.local`) && PathPrefix(`/`)"
      - "traefik.http.services.frontend-{{ service_number }}.loadbalancer.server.port=9000"
      - "traefik.docker.network=web"
    networks:
      - web

  backend:
    build: ./backend
    labels:
      - "traefik.enable=true"
      # Direct access from bridge Traefik
      - "traefik.http.routers.bridge-backend-{{ service_number }}.rule=Host(`{{ service_name }}.local`) && PathPrefix(`/api`)"
      - "traefik.http.services.bridge-backend-{{ service_number }}.loadbalancer.server.port=9001"
      - "traefik.docker.network=bridge-network"
      # Access from demo-app Traefik
      - "traefik.http.routers.backend-{{ service_number }}.rule=Host(`{{ service_name }}.local`) && PathPrefix(`/api`)"
      - "traefik.http.services.backend-{{ service_number }}.loadbalancer.server.port=9001"
      - "traefik.http.routers.backend-{{ service_number }}.service=bridge-backend-{{ service_number }}"
      - "traefik.docker.network=web"
    networks:
      - web
      - bridge-network

  traefik:
    image: traefik:v2.10
    command:
      - "--log.level=DEBUG"
      - "--accesslog=true"
      - "--accesslog.filepath=/dev/stdout"
      - "--providers.docker=true"
      - "--providers.docker.exposedbydefault=false"
      - "--entrypoints.web.address=:8050"
      - "--providers.docker.network=web"
      - "--ping=true"
    expose:
      - "8050"
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.demo-app-{{ service_number }}.rule=Host(`{{ service_name }}.local`)"
      - "traefik.http.services.demo-app-{{ service_number }}.loadbalancer.server.port=8050"
      - "traefik.docker.network=bridge-network"
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock:ro
      - ./traefik/traefik.yml:/etc/traefik/traefik.yml:ro
    networks:
      - web
      - bridge-network

networks:
  web:
    name: web-{{ service_number }}
    driver: bridge
    internal: true
  bridge-network:
    name: bridge-network
    external: true 